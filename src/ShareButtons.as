package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class ShareButtons extends MovieClip{		static public var _self:ShareButtons		public function ShareButtons() {			_self=this			setup()		}		private function setup(){			_sare_sina.addEventListener(MouseEvent.CLICK,btnHander)			_sare_renren.addEventListener(MouseEvent.CLICK,btnHander)			_sare_kaixin.addEventListener(MouseEvent.CLICK,btnHander)			_sare_tencent.addEventListener(MouseEvent.CLICK,btnHander)//			_sare_douban.addEventListener(MouseEvent.CLICK,btnHander)					}		private function btnHander(event:MouseEvent){			var _str:String="有些话不愿大声说出来，不妨就写在充满雾气的浴室玻璃上吧！那些话，隐秘而伟大。"			var _title:String=""			ShareApi._url="http://site.douban.com/haier_waterheater/"						switch(event.currentTarget){				case _sare_sina:							MainStage._self._GATracker.trackEvent("shareButton","click","sina")					ShareApi._ShareTo(ShareApi.SITE_SINA,_str,_title)				break				case _sare_renren:					MainStage._self._GATracker.trackEvent("shareButton","click","renren")					ShareApi._ShareTo(ShareApi.SITE_RENREN,_str,_title)									break				case _sare_kaixin:									MainStage._self._GATracker.trackEvent("shareButton","click","kaixin")					ShareApi._ShareTo(ShareApi.SITE_KAIXIN,_str,_title)				break				case _sare_tencent:									MainStage._self._GATracker.trackEvent("shareButton","click","tencent")					ShareApi._ShareTo(ShareApi.SITE_TENCENT,_str,_title)				break//				case _sare_douban:				//					ShareApi._ShareTo(ShareApi.SITE_DOUBAN,_str,_title)//				break			}								}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}