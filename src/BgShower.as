package  {	import flash.display.MovieClip;	import gs.TweenLite	public class BgShower extends MovieClip{		static public var _self:BgShower		private var  _picNum:int		public function BgShower() {			_self=this		}		private function setup(){					}		public function set _PicNum(__set:int){			_picNum=__set					TweenLite.to(this,1,{x:-140+12,alpha:0,y:30+112,rotation:-10-10*Math.random(),onComplete:showOk})		}		private function showOk(){			this.y=-62			this.x=-202			this.scaleX=this.scaleY=1.2			this.rotation=-10+5*Math.random()			_imgs.gotoAndStop(_picNum)			TweenLite.to(this,1,{scaleX:1,scaleY:1,x:-140-12,alpha:1,y:40,rotation:0})		}		public function get _PicNum():int{			return _picNum		}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}