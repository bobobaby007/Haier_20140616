package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import gs.TweenLite	public class ProductItem extends MovieClip{		private var _pNum:int=1		public function ProductItem() {					}		private function btnHander(event:MouseEvent){			switch(event.type){				case MouseEvent.MOUSE_OVER:					TweenLite.to(_m,.4,{scaleX:.28,scaleY:.28})				break				case MouseEvent.MOUSE_OUT:					TweenLite.to(_m,.4,{scaleX:.23,scaleY:.23})				break				case MouseEvent.CLICK:					MainBg._self._ProductNum=_pNum				break			}		}		public function set _PNum(__set:int){			_pNum=__set			_m.gotoAndStop(_pNum)			this.gotoAndStop(_pNum)			_btn.addEventListener(MouseEvent.MOUSE_OVER,btnHander)			_btn.addEventListener(MouseEvent.MOUSE_OUT,btnHander)			_btn.addEventListener(MouseEvent.CLICK,btnHander)		}		public function get _PNum():int{			return _pNum					}							}	}