package  {	import flash.display.MovieClip;	import gs.TweenLite	import gs.easing.Back	public class TopBar extends MovieClip{		static public var _self:TopBar		private var _stepNum:int=0				public function TopBar() {			_self=this			setup()			_StepNum=1		}		private function setup(){					}		public function set _StepNum(__set:int){			_stepNum=__set			for(var i:int=1;i<=4;i++){				var _m:MovieClip=this["_step_"+i] as MovieClip				if(i<=_stepNum){					_m.gotoAndStop(2)					_m.alpha=0					_m.scaleX=_m.scaleY=2					TweenLite.to(_m,.4,{alpha:1,scaleX:1,scaleY:1})				}else{					_m.gotoAndStop(1)					TweenLite.to(_m,.4,{alpha:1,scaleX:1,scaleY:1})				}							}						_intro.gotoAndStop(_stepNum)			_intro.alpha=0			_intro.x=120						switch(_stepNum){				case 2:					_intro._text.gotoAndStop(AgeSelecter._self._AageNum)				break				case 3:					_intro._text.gotoAndStop(AgeSelecter._self._AageNum)				break			}						TweenLite.to(_intro,1,{alpha:1,x:0,ease:Back.easeOut})		}		public function get _StepNum():int{			return _stepNum		}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}