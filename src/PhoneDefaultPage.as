package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class PhoneDefaultPage extends MovieClip{		static public var _self:PhoneDefaultPage		public function PhoneDefaultPage() {			_self=this			setup()			_hide()		}		private function setup(){			_btn.addEventListener(MouseEvent.CLICK,btnHander)		}		private function btnHander(event:MouseEvent){			if(DouBan._Self.CheckStatus()==DouBan.STATUS_NO_LOGIN){				Main._self._Page="needLog"				return			}			if(DouBan._Self.CheckStatus()==DouBan.STATUS_NO_CONTACT){				Main._self._Page="needContact"				return			}					Main._self._Page="startPage"		}		public function _refreshStr(__str:String){			QR_Code(_code)._refreshStr(__str,230,230)		}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}