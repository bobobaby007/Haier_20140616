package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;	import gs.TweenLite	import flash.geom.Point;	public class ProductSelecter extends MovieClip{		static public var _self:ProductSelecter				private var _gap:Number=90		private var _page:int=0		public function ProductSelecter() {			_self=this			setup()			_Page=0		}		private function setup(){			_next.addEventListener(MouseEvent.CLICK,btnHander)			_pre.addEventListener(MouseEvent.CLICK,btnHander)			for(var i:int=0;i<15;i++){				var _item:ProductItem=new ProductItem()				_item.x=i*_gap				_item.addEventListener(MouseEvent.MOUSE_OUT,itemHander)				_item.addEventListener(MouseEvent.MOUSE_OVER,itemHander)				_item._PNum=i+1				_items.addChild(_item)			}			//addChild(_items)		}		private function itemHander(event:MouseEvent){			var _item:ProductItem=event.currentTarget as ProductItem			switch(event.type){				case MouseEvent.MOUSE_OVER:					var _point:Point=new Point(0,0)					_point=_item.localToGlobal(_point)					_point=this.globalToLocal(_point)					ProductAlerter._self.x=_point.x					ProductAlerter._self._ShowNum=_item._PNum				break				case MouseEvent.MOUSE_OUT:					ProductAlerter._self._out()				break			}		}		private function btnHander(event:MouseEvent){			switch(event.currentTarget){				case _next:					_Page+=1				break				case _pre:					_Page-=1				break			}		}		public function set _Page(__set:int){			_page=__set			if(_page>=3){				_page=3				_next.visible=false			}else{				_next.visible=true			}			if(_page<=0){				_page=0				_pre.visible=false			}else{				_pre.visible=true			}				TweenLite.to(_items,.4,{x:-120-_page*4*_gap})		}		public function get _Page():int{			return _page		}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}