package  {	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class HandOrKeyboard extends MovieClip{		static public var _self:HandOrKeyboard		public function HandOrKeyboard() {			_self=this			setup()		}		private function setup(){			_hand.addEventListener(MouseEvent.CLICK,btnHander)			_keyboard.addEventListener(MouseEvent.CLICK,btnHander)		}		private function btnHander(event:MouseEvent){			switch(event.currentTarget){				case _hand:					DrawBoardContainer._self._EditeType="hand"				break				case _keyboard:					DrawBoardContainer._self._EditeType="keyboard"				break			}			Main._self._Page="drawingPage"		}		public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}