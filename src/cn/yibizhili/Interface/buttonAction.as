//AUTHOR:bobobaby007@hotmail.compackage cn.yibizhili.Interface{	import flash.events.MouseEvent;	import flash.filters.GlowFilter;	public class buttonAction {		private var _targetMc:Object;		private var _action:String;		private var _basicFilters:Object;		private var _glow:GlowFilter;		private var _color:Number;		private var _alpha:Number;		private var _blur:Number		public function buttonAction($targetMc:Object,$action:String="glow",$color:Number=0xffffff,$blur:Number=5,$alpha:Number=0.2) {			_targetMc=$targetMc;			_color=$color;			_blur=$blur			_alpha=$alpha;			_basicFilters=_targetMc.filters;			_action=$action;			switch (_action) {				case "glow" :					glow();					break;			}		}		private function glow() {			_glow=new GlowFilter  ;			_glow.color=_color;			_glow.alpha=_alpha;			_glow.blurX=_glow.blurY=_blur			_targetMc.addEventListener(MouseEvent.MOUSE_OVER,over_glow);			_targetMc.addEventListener(MouseEvent.MOUSE_UP,over_glow);			_targetMc.addEventListener(MouseEvent.MOUSE_OUT,outHander);			_targetMc.addEventListener(MouseEvent.MOUSE_DOWN,outHander);		}		private function over_glow(event:MouseEvent) {			_targetMc.filters=[_glow];		}		private function outHander(event:MouseEvent) {			_targetMc.filters=_basicFilters;		}		public static function addGlow($btn:Object,$color:Number=0xffffff,$blur:Number=5,$alpha:Number=.2) {			var button:buttonAction=new buttonAction($btn,"glow",$color,$blur,$alpha);		}	}}