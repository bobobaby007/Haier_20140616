package  {	import flash.display.MovieClip		import flash.display.DisplayObject	import flash.geom.ColorTransform;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.Point;	public class ItemHander extends MovieClip{		public var _m:MovieClip=new MovieClip		static public var _self:ItemHander		private var _target:MovieClip		public function ItemHander() {			_self=this			_m.x=-7			_m.y=-7			addChild(_m)						this.addEventListener(Event.ENTER_FRAME,enterFrameHander)			this.mouseEnabled=false			this.mouseChildren=false		}		public function _dropItem(){			if(!_target){				return			}			var _point:Point=new Point(0,0)			_point=_target.localToGlobal(_point)			_point=ItemsBoard._self.globalToLocal(_point)			ItemsBoard._self._AddItem(_target,_point.x,_point.y)						_target=null		}		public function _clearItem(){			var _n:int=_m.numChildren			for(var i:int=0;i<_n;i++){				_m.removeChildAt(0)			}			_target=null		}		private function enterFrameHander(event:Event){			_m.x=mouseX			_m.y=mouseY					}				public function set _Target(target:MovieClip){						var targetClass:Class=Object(target).constructor;			var duplicate:MovieClip=new targetClass;			_target=duplicate			_target.x=0			_target.y=0			var _n:int=_m.numChildren			for(var i:int=0;i<_n;i++){				_m.removeChildAt(0)			}			_m.addChild(duplicate)								}				public function get _Target():MovieClip{			return _target		}		public function set _Alpha(__set:Number){			_m.alpha=__set		}		public function set _Scale(__set:Number){			_m.scaleX=_m.scaleY=__set		}			}	}