//------update:20101228package  {	import flash.display.DisplayObject	public class RootParameters {				public function RootParameters() {					}		static public function getParameters(__parameter:String,__basicStr:String=null,__basicObject:DisplayObject=null):String{			var _str:String=__basicStr						if(__basicObject&&__basicObject.stage){								for(var __p:String in __basicObject.stage.loaderInfo.parameters){					if(__p.toUpperCase()==__parameter.toUpperCase()){						if(__basicObject.stage.loaderInfo.parameters[__p]!=""){							_str=__basicObject.stage.loaderInfo.parameters[__p]						}											}				}			}			return _str		}	}	}