package  {	import flash.display.MovieClip;	import gs.TweenLite	import flash.events.MouseEvent;	public class AgeSelecter extends MovieClip{		static public var _self:AgeSelecter		private var _ageNum:int=0		public function AgeSelecter() {			_self=this			setup()			_AageNum=2		}		private function setup(){			_down.addEventListener(MouseEvent.CLICK,btnHander)			_up.addEventListener(MouseEvent.CLICK,btnHander)			_ageBtn.addEventListener(MouseEvent.CLICK,btnHander)		}		private function btnHander(event:MouseEvent){			switch(event.currentTarget){				case _up:					_AageNum-=1				break				case _down:					_AageNum+=1				break				case _ageBtn:					ItemSelecter._self._GalleryNum=_AageNum					Main._self._Page="makingPage"				break			}		}		public function set _AageNum(__set:int){						_ageNum=__set			if(_ageNum>=4){				_ageNum=4				_down.visible=false			}else{				_down.visible=true			}			if(_ageNum<=1){				_ageNum=1				_up.visible=false			}else{				_up.visible=true			}						BgShower._self._PicNum=_ageNum			MainBg._self._PicNum=_ageNum			WorkBoard._self._AgeNum=_ageNum			OkMessage._self._AgeNum=_ageNum												_ageBtn._num.gotoAndStop(_ageNum)			_ageBtn._texts.gotoAndStop(_ageNum)			_ageBtn._num.scaleX=_ageBtn._num.scaleY=.4			_ageBtn._num.alpha=0			TweenLite.to(_ageBtn._num,1,{alpha:1,scaleX:1,scaleY:1})			TweenLite.to(_ageNums,1,{y:-15-35*(_ageNum-1)})		}		public function get _AageNum():int{			return _ageNum		}				public function _show(){			this.visible=true		}		public function _hide(){			this.visible=false		}	}	}